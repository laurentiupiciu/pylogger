{
  "version" : 1,
  "disable_existing_loggers" : true,

  "formatters" : {
    "colored" : {
      "class" : "log.custom_formatters.ColoredFormatter",
      "format" : "%(asctime)s — [%(name)s] — %(levelname)-8s — %(message)s"
    },

    "standard" : {
      "format" : "%(asctime)s — [%(name)s] — %(levelname)-8s — %(message)s"
    }
  },

  "handlers" : {
    "console" : {
      "level" : "DEBUG",
      "formatter" : "colored",
      "class" : "logging.StreamHandler",
      "stream" : "ext://sys.stdout"
    },

    "file" : {
      "level" : "INFO",
      "formatter" : "standard",
      "class" : "logging.handlers.TimedRotatingFileHandler",
      "filename" : "{}",
      "when" : "midnight",
      "backupCount" : 5
    }
  },

  "loggers" : {
    "data_analysis" : {
      "handlers" : ["console", "file"],
      "level" : "DEBUG",
      "propagate" : false
    }
  }
}
